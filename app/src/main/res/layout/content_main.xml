<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.syshuman.kadir.haircolor3.view.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/companies"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lZone1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblZone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone 1 - Root"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/txtZone1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:text="..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnZone1"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Read Zone 1 ..."
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey1" />

        <!-- End of Zone 1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lZone2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblZone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone 2 - Middle"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/txtZone2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:text="..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnZone2"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="0dp"
                android:text="Read Zone 2 ..."
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey1" />

        <!-- End of Zone 2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lZone3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblZone3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone 3 - End"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/txtZone3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:text="..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnZone3"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="0dp"
                android:text="Read Zone 3 ..."
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey1" />

        <!-- End of Zone 3 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lTarget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/txtTarget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:text="..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnTarget"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="0dp"
                android:text="Read Target ..."
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnGetRecipe"
                style="@android:style/Widget.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Instruction" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
