<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/confirm_email_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/confirmation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginLarge"
                android:gravity="center_horizontal"
                android:text="@string/confirmation"
                android:textSize="@dimen/font_title_size" />

            <TextView
                android:id="@+id/confirmation_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginLarge"

                android:gravity="center_horizontal"
                android:text="@string/confirmation_note" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/marginLarge"
                android:contentDescription="@string/contentDescription"
                android:src="@mipmap/ic_email_bk" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/next_step_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/marginSmall"
                    android:text="@string/next_step" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginLarge"
                android:gravity="center_horizontal"
                android:text="@string/create_new"
                android:textSize="@dimen/fontLarge" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/firstname_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginMedium">

                <EditText
                    android:id="@+id/reg_fname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textSize="@dimen/fontMedium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lastname_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginMedium">

                <EditText
                    android:id="@+id/reg_lname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/fontMedium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginMedium">

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textAutoCorrect"
                    android:textSize="@dimen/fontMedium" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/dividen_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginMedium">

                <EditText
                    android:id="@+id/reg_pass1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textSize="@dimen/fontMedium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/confirm_password_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/marginMedium">

                <EditText
                    android:id="@+id/reg_pass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textSize="@dimen/fontMedium" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/dividen_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <CheckBox
                android:id="@+id/reg_eula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginMedium"
                android:checked="false"
                android:text="@string/agree_eula" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginMedium"
                android:orientation="vertical">

                <Button
                    android:id="@+id/reg_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/marginMedium"
                    android:background="?android:attr/fastScrollTrackDrawable"
                    android:text="@string/register" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
